<template>
    <view class="{{flag?'card active':'card'}}">
        <view style="margin:20rpx 0;">{{tit}}</view>
        <view>{{money}}å…ƒ</view>
        <view class="btn">
            <text wx:if="{{flag}}" @tap="minus">-</text>
            <text bindtap="add">+</text>
        </view>
        <text wx:if="{{flag}}" class="count">{{count}}</text>
    </view>
</template>
<script>
import wepy from 'wepy';
export default class card extends wepy.component {
  props = {
    tit: String,
    money: String
  };
  data = {
    flag: false,
    count: 0,
    money: 0
  };
  methods = {
    add() {
      this.flag = true;
      let newCount = this.count;
      newCount++;
      this.count = newCount;
      this.$emit('add', {
        money: this.money
      });
    },
    minus() {
      let newCount = this.count;
      newCount--;
      if (newCount === 0) {
        this.flag = false;
      }
      this.count = newCount;
      this.$emit('minus', {
        money: this.money
      });
    }
  };
  onShow() {
    this.money = money;
  }
}
</script>
